    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="100dip"
                android:layout_height="120dp"
        
                android:layout_centerVertical="true"
             android:layout_alignParentLeft="true"
                android:layout_marginTop="22dp"
                android:layout_weight="0.50"
                android:src="@drawable/nhm" />
            <ImageView
                android:layout_width="100dip"
                android:layout_height="120dp"
        
                android:layout_centerHorizontal="true"
               android:layout_centerInParent="true"
                android:layout_marginTop="22dp"
                android:layout_weight="0.50"
                android:src="@drawable/uttarakhand" />
            <ImageView
                android:layout_width="100dip"
                android:layout_height="120dp"
        
                android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:layout_weight="0.50"
                android:src="@drawable/msakhi_logo" />
          
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="#5B92FE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.3"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:weightSum="1.55" >

                <RelativeLayout
                    android:id="@+id/anc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >

                    <Button
                       
                        android:id="@+id/anclist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#5FB4EF"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:singleLine="false"
                        android:text="@string/ancPregnant"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/anc" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.02" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >

                    <Button
                        android:id="@+id/newborn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF851B"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:singleLine="false"
                        android:text="@string/NewbornInfant"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/newborn" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.02" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >

                    <Button
                        android:id="@+id/immunized"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF851B"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:singleLine="false"
                        android:text="@string/immunized"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/immune" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:weightSum="1" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >

                    <Button
                        android:id="@+id/btnhv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#A1C436"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:text="@string/homevisit"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/homevisit" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.02" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" >

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AB7D44"
                        android:gravity="center|bottom"
                        android:paddingBottom="10dp"
                        android:text="@string/iycf"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/feed" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

