<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/Black"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/Familymembershowheading"
        android:textColor="@color/Black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tblspouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/spouse"
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/sspousename" />
 <Spinner
                        android:id="@+id/spinspouse"
                        style="@style/EditText"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".9"
                        android:background="@drawable/textbox"
                        android:focusable="false"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="20" />
        <TextView
            android:id="@+id/txtSpouse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/Black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/editicon1" 
           />
    </TableRow>

    <TableRow
        android:id="@+id/tblmother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/sMothername" />
 <Spinner
                        android:id="@+id/spinmother"
                        style="@style/EditText"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".9"
                        android:background="@drawable/textbox"
                        android:focusable="false"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="20" />
        <TextView
            android:id="@+id/txtMothername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/Black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
      <ImageView
            android:id="@+id/btnEdit2"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/editicon1" 
           /> 
    </TableRow>

    <TableRow
        android:id="@+id/tblfather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/sFathername" />
 <Spinner
                        android:id="@+id/spinFather"
                        style="@style/EditText"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight=".9"
                        android:background="@drawable/textbox"
                        android:focusable="false"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="20" />
        <TextView
            android:id="@+id/txtFathername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/Black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
        <ImageView
            android:id="@+id/btnEdit3"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/editicon1" 
           /> 
    </TableRow>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bg_custom"
        android:shadowColor="#171717"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:text="@string/close"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnSave"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bg_custom"
        android:shadowColor="#171717"
        android:visibility="gone"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:text="@string/save"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>