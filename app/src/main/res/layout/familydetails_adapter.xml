<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/GridRow"
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvFMName"
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/textbox"
            android:gravity="center"
            android:text="@string/FamilyMemb"
             />

        <TextView
            android:id="@+id/tvFMRelation"
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:background="@drawable/textbox"
            android:gravity="center"
            android:text="@string/Relation" />

        <TextView
            android:id="@+id/tvFMGender"
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:background="@drawable/textbox"
            android:gravity="center"
            android:text="@string/Gender" />

        <TextView
            android:id="@+id/tvFMagefamily"
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:background="@drawable/textbox"
            android:gravity="center"
            android:text="@string/agefamily" />

     <TableRow
            android:id="@+id/Gridimage"
            android:layout_width="50dp"
            android:layout_height="match_parent" 
            android:background="@drawable/textbox">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/search"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/editicon" />

            
           </TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />
        
    </TableRow>

</LinearLayout>