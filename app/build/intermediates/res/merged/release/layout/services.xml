<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/Black"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/services"
        android:textColor="@color/Black"
        android:textSize="19sp"
        android:textStyle="bold" />

      
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/username"
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/BlueViolet"
             android:gravity="center"
            android:layout_weight="1"
           />

       

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/editdata" />

        
        <ImageView
            android:id="@+id/btneditdata"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/addicon" 
           />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/migrated" />

        
        <ImageView
            android:id="@+id/btnmigrated"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/addicon" 
           />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/Dead" />

        
        <ImageView
            android:id="@+id/btnDead"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/addicon" 
           />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
    </TableRow>
    
     <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

      <!--   <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/eligiblecouple" />

          <ImageView
            android:id="@+id/btneligiblecouple"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/addicon" 
           /> -->
        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />
    </TableRow>

    <TableRow  
        android:layout_width="match_parent"
        android:layout_height="30dp"
        
        android:layout_gravity="center_horizontal"></TableRow>

</LinearLayout>