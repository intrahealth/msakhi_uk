<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <TextView
            style="@style/SimpleTextblack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Immunizationduelist"
            android:background="@color/PowderBlue"
            android:textSize="22dp"
            android:paddingTop="5dp"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />

            <TextView
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/SelectMonth" />

            <Spinner
                android:id="@+id/spin_month"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/textbox" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />

            <TextView
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/Date" />

            <TextView
                android:id="@+id/txt_date"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/textbox" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />
        </TableRow>
        <TableRow
            android:id="@+id/tbl_actualvhnd"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp" 
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />

            <TextView
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/ActualVHNDDate" />

            <TextView
                android:id="@+id/tv_Actual_VHNDDate"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/textbox" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textsheet" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />

            <TextView
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/Service"
                android:textColor="@color/White"
                android:textSize="22dp" />

            <TextView
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/Due"
                android:textColor="@color/White"
                android:textSize="22dp" />

            <TextView
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/done1"
                android:textColor="@color/White"
                android:textSize="22dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />
        </TableRow>



        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />

            <TextView
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/textbox"
                android:text="@string/Immunization" />

            <TextView
                android:id="@+id/tv_immudue"
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/textbox"
                android:text="@string/done" />

            <TextView
                android:id="@+id/tv_immudone"
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/textbox"
                android:text="@string/Due" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1" />
        </TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="5dp" />


        <LinearLayout
            android:id="@+id/tblrow_Immunization"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_Immunization"
                style="@style/Textview"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/textsheet"
                android:gravity="center"
                android:text="@string/Immunization"
                android:textColor="@color/White"
                android:textSize="22dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <GridView
                        android:id="@+id/Gridview_Immunization"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:numColumns="1"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbars="vertical"
                        android:smoothScrollbar="true" >
                    </GridView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>