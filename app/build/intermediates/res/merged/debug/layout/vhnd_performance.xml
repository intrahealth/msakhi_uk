<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="@string/VHNDPerformance"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnsave"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/btn_bg_custom"
            android:gravity="center"
            android:text="@string/save" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="@string/VillageName" />

        <TextView
            android:id="@+id/villagename_tx"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/textbox" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="@string/Date" />

        <TextView
            android:id="@+id/txt_date_show"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/textbox" />

        <TextView
            android:id="@+id/txt_date"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/textbox"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />

        <TextView
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="@string/Date" />

        <TextView
            android:id="@+id/txt_date_show1"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/textbox" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />
    </TableRow>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp" >

        <TextView
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".3"
            android:background="@drawable/textsheet"
            android:gravity="center"
            android:text="@string/SLNo"
            android:textColor="@color/White" />

        <TextView
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/textsheet"
            android:gravity="center"
            android:text="@string/Items"
            android:textColor="@color/White" />
    </TableRow>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="600dp"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <GridView
                android:id="@+id/Grid_Preform"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:numColumns="1"
                android:scrollbarFadeDuration="0"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:smoothScrollbar="true" >
            </GridView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>