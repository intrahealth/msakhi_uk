<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pagename"
        style="@style/SimpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="@string/pregnantwomen"
        android:textColor="@color/orangedark"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAncVillage"
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".8"
            android:gravity="center"
            android:text="@string/homevisit"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".12"
                android:visibility="invisible" />

            <GridView
                android:id="@+id/gridanc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox"></GridView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".11"
                android:visibility="invisible" />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1"
                android:visibility="invisible" />

            <Button
                android:id="@+id/rePlay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_replay_128dp"
                android:onClick="onclickButton" />

            <Button
                android:id="@+id/Pause"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/ic_pause_128dp"
                android:onClick="onclickButton" />

            <Button
                android:id="@+id/Play"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/ic_play128dp"
                android:onClick="onclickButton" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".12"
                android:visibility="invisible" />

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_custom"
                android:text="@string/next1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".11"
                android:visibility="invisible" />
        </TableRow>
    </LinearLayout>

</LinearLayout>