<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/tvAncVillage"
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight=".8"
            android:gravity="center"
            android:text="@string/sVillage"
            android:visibility="invisible" />

        <Spinner
            android:id="@+id/spinVillage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight=".9"
            android:background="@drawable/textbox"
            android:visibility="invisible" />

       

        <Button
            android:id="@+id/btnaddanc"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.2"
            android:background="@drawable/btn_bg_custom"
            android:text="@string/addpregnantwomen"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/btncloseanc"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_custom"
            android:text="@string/close"
            android:textColor="@color/White" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".09"
            android:visibility="invisible" />
    </LinearLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".025" />

        <EditText
            android:id="@+id/etFamilyIDSearch"
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:hint="@string/WomenName"
            android:inputType="text"
            android:maxLength="50"
            android:padding="5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".03" />

        <Button
            android:id="@+id/btnsearchFilter"
            style="@style/ButtonText"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".45" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <RadioGroup
            android:id="@+id/rgRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".2"
                android:visibility="invisible" />

            <RadioButton
                android:id="@+id/radioRegistration"
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/registration" />

            <RadioButton
                android:id="@+id/radioFollowup"
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/followup" />

            <Button
                android:id="@+id/btnanc"
                style="@style/ButtonText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.7"
                android:background="@drawable/button"
                android:text="@string/AncDeliveryDetail"
                android:textColor="@color/White"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".12"
                android:visibility="invisible" />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
         android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp" >

       

        <TextView
            android:id="@+id/ltvWomenName"
            style="@style/Textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           
            android:background="@drawable/textsheet"
            android:text="@string/pregnantwomen" />

        
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <GridView
                    android:id="@+id/gridanc"
                    android:layout_width="fill_parent"
                    android:layout_height="30000dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    android:smoothScrollbar="true" >
                </GridView>
            </LinearLayout>
        </ScrollView>

