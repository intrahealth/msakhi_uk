<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/LightGrey"
    android:orientation="vertical" >

    <!-- layout title -->

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_alert_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/White" />
    </LinearLayout>

    <!-- layout dialog content -->

    <RelativeLayout
        android:id="@+id/layout_alert_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/txt_alert_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#6b3918"
            android:textSize="18sp"
            android:text="hlo"
            android:textAlignment="center"
            android:textStyle="normal" />
    </RelativeLayout>

    <!-- layout dialog buttons -->

    <LinearLayout
        android:id="@+id/layout_alert_buttons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_yes"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
             android:background="@drawable/btn_bg_custom"
               android:gravity="center"
            android:text="@string/yes"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_no"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
             android:background="@drawable/btn_bg_custom"
            android:gravity="center"
            android:text="@string/no"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>