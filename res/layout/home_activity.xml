    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp" 
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".025" />

        <EditText
            android:id="@+id/etFamilyIDSearch"
            style="@style/SimpleText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.2"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:hint="Women Name"
            android:inputType="text"
            android:maxLength="50" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".03" />

     

        <Button
            android:id="@+id/btnsearchFilter"
            style="@style/ButtonText"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".45" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <RadioGroup
            android:id="@+id/rgRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".2"
                android:visibility="invisible" />

            <RadioButton
                android:id="@+id/radioRegistration"
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/registration" />

            <RadioButton
                android:id="@+id/radioFollowup"
                style="@style/SimpleText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/followup" />

            <Button
                android:id="@+id/btnanc"
                style="@style/ButtonText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.7"
                android:background="@drawable/button"
                android:text="@string/AncDeliveryDetail"
                android:textColor="@color/White"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".12"
                android:visibility="invisible" />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".1"
            android:visibility="invisible" />

        

        <TextView
            android:id="@+id/ltvWomenName"
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/textsheet"
            android:text="@string/MotherName1" />

        

        <TextView
            android:id="@+id/tv_stat"
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.05"
            android:background="@drawable/textsheet" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".085"
            android:visibility="invisible" />
    </TableRow>

      <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always" >
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".12"
                android:visibility="invisible" />

            <GridView
                android:id="@+id/gridanc"
                android:layout_width="0dp"
                android:layout_height="1000dp"
                android:layout_weight="4"
                android:background="@drawable/textbox" >
            </GridView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".11"
                android:visibility="invisible" />
        </TableRow>
    </LinearLayout>  
</ScrollView>
