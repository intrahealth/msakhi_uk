<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".05" />

        <EditText
            android:id="@+id/etFamilyIDSearch"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:ems="10"
            android:focusable="true"
            android:hint="@string/pregnantwomensrch"
            android:inputType="text" />

        <ImageView
            android:id="@+id/btnsearchFilter"
            style="@style/ButtonText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/search_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".05"
            android:visibility="invisible" />
    </LinearLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="10dp" >
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".1"
            android:visibility="invisible" />

        <TextView
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:background="@drawable/textsheet"
            android:gravity="center"
            android:text="@string/familyId"
            android:textColor="@color/White" />

        <TextView
            style="@style/Textview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/textsheet"
            android:gravity="center"
            android:text="@string/pregnantwomensrch"
            android:textColor="@color/White" />

        <TextView
            style="@style/Textview"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:background="@drawable/textsheet"
            android:gravity="center"
            android:text="@string/husbandname"
            android:textColor="@color/White" />

        <TextView
            style="@style/Textview"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:background="@drawable/textsheet"
            android:gravity="center"
            android:text="@string/Addchild"
            android:textColor="@color/White" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".1"
            android:visibility="invisible" />
    </TableRow>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp" 
        android:layout_weight="5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1"
                android:visibility="invisible" />

            <GridView
                android:id="@+id/HHSurveyGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/White"
                android:scrollbars="vertical" >
            </GridView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".1"
                android:visibility="invisible" />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/totalcount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/SkyBlue"
            android:textColor="@color/White"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>